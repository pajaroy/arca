[build-system]
requires = ["setuptools>=61.0"]
build-backend = "setuptools.build_meta"

[project]
name = "trece"
version = "0.1.0"
description = "Sistema contable y de gestiÃ³n de 13 Cannabis Club"
authors = [
    { name = "Club 13CC", email = "contacto@13cc.org" }
]
readme = "README.md"
requires-python = ">=3.11"
dependencies = [
    "blake3",
    "ruamel.yaml",
    "chromadb",
    "scikit-learn",
