# .envrc en /home/arca/@arca o donde quieras el entorno

# Crear venv si no existe
if [ ! -d .venv ]; then
  python3 -m venv .venv
  source .venv/bin/activate
  if [ -f requirements.txt ]; then
    pip install --upgrade pip
    pip install -r requirements.txt
  fi
else
  source .venv/bin/activate
fi

export ARCA_MODE=dev

echo "Entorno ARCA activado."
