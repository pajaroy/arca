)

@router.get(
    "/status",
    summary="Estado del m贸dulo de Cultivo",
    description="Verifica el estado operativo del subsistema de agricultura"
)
async def obtener_estado_cultivo():
    """Endpoint de monitoreo de salud del m贸dulo"""
