analisis_resumen:
  id: resumen_cultivo004_semana_01
  version: "0.1.0"
  tipo: "analisis_resumen"
  contexto:
    cultivo: "004"
    semana: 01
    responsable: "Santi"
    archivo_base: "mediciones_cultivo004_semana_01.yaml"
    fecha_analisis: "2025-06-17"

  resumen_general:
    promedio_fertilidad_µs_cm: 229
    promedio_humedad_%: 77.1
    promedio_ph: 7.4
    promedio_temp_°C: 22.2
    promedio_luz_lux: 6167
    promedio_humedad_ambiental_%: 56.3

  alertas:
    luz_muy_baja:
      descripcion: "Menor a 1500 LUX. Puede afectar fotosíntesis y desarrollo floral."
      plantas_afectadas: ["PLT-008", "PLT-010", "PLT-016", "PLT-022", "PLT-025", "PLT-026", "PLT-027", "PLT-028", "PLT-029", "PLT-034", "PLT-040"]

    fertilidad_baja:
      descripcion: "Menor a 120 µs/cm. Riesgo de déficit nutricional."
      plantas_afectadas: ["PLT-001", "PLT-003", "PLT-005", "PLT-012", "PLT-013", "PLT-016", "PLT-017", "PLT-021", "PLT-029", "PLT-031", "PLT-032", "PLT-040"]

    humedad_excesiva:
      descripcion: "Mayor al 90%. Riesgo de hongos o compactación del sustrato."
      plantas_afectadas: ["PLT-004", "PLT-006", "PLT-008", "PLT-009", "PLT-024", "PLT-037", "PLT-038"]

    humedad_ambiente_baja:
      descripcion: "Menor al 54%. Puede ralentizar desarrollo en flora."
      plantas_afectadas: ["PLT-030", "PLT-031", "PLT-032", "PLT-033", "PLT-034", "PLT-035"]

  conclusiones:
    - El cultivo presenta buena estabilidad térmica y de pH.
    - Hay un grupo crítico de plantas con luz muy baja, probablemente por ubicación en sombra.
    - Se identificaron al menos 12 plantas con fertilidad baja que requieren refuerzo nutricional.
    - Existen zonas con humedad excesiva que deben ser atendidas por drenaje o manejo de riego.
    - Se recomienda intervención localizada en nutrición, luz y riego según alertas.

  recomendaciones:
    - Poda o reubicación de plantas con luz < 1500 LUX.
    - Monitorear humedad del sustrato por 3 días consecutivos.
    - Aplicar fertilización de impacto en plantas con fertilidad < 120 µS/cm.
    - Etiquetar con cinta o QR las plantas críticas para seguimiento semanal.

  tags: ["resumen", "alerta_luz", "fertilidad_baja", "humedad_alta", "semana-01", "cultivo004"]
